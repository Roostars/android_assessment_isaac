<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.prueba.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_home_to_factDetailFragment"
            app:destination="@id/factDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/factDetailFragment"
        android:name="com.example.prueba.ui.factDetail.FactDetailFragment"
        android:label="fragment_fact_detail"
        tools:layout="@layout/fragment_fact_detail" />


</navigation>